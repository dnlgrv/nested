<header>
  <h1><%= @book.title %></h1>
</header>

<div class="mb-5">
  <%= simple_format @book.synopsis, class: "lead" %>
</div>

<div class="row align-items-center g-4">
  <div class="col-auto">
    <h2>Chapters</h2>
  </div>

  <div class="col">
    <%= link_to "New Chapter", new_book_chapter_path(@book), class: "btn btn-outline-secondary" %>
  </div>
</div>

<ul>
  <% @book.chapters.each do |chapter| %>
    <li>
      <%= chapter.title %>
    </li>
  <% end %>
</ul>
